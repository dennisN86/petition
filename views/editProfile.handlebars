<form method="post">
    <input name="_csrf" type="hidden" value="{{ csrfToken }}">

    {{#userData}}

    <input type="text" name="firstname" placeholder="Firstname" value="{{first_name}}">
    <input type="text" name="lastname" placeholder="Lastname" value="{{last_name}}">
    <input type="text" name="emailaddress" placeholder="Emailaddress" value="{{email}}">
    <input type="password" name="password" placeholder="Change Password Here!">
    <input type="text" name="age" placeholder="Age" value="{{age}}">
    <input type="text" name="city" placeholder="City" value="{{city}}">
    <input type="text" name="url" placeholder="Homepage" value="{{url}}">
    <button id="register" type="submit">Update</button>

    {{/userData}}
</form>
