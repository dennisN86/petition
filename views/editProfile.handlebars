<h1>Edit your profile</h1>

<form method="post">
    <input type="text" name="firstname" placeholder="Firstname" value="{{userData.first_name}}">
    <input type="text" name="lastname" placeholder="Lastname" value="{{userData.last_name}}">
    <input type="text" name="emailaddress" placeholder="Emailaddress" value="{{userData.email}}">
    <input type="password" name="password" placeholder="Password" value="password">
    <input type="text" name="age" placeholder="Age" value="{{userData.age}}">
    <input type="text" name="city" placeholder="City" value="{{userData.city}}">
    <input type="text" name="url" placeholder="Homepage" value="{{userData.url}}">
    <input name="_csrf" type="hidden" value="{{ csrfToken }}">
    <button id="register" type="submit">Update</button>
</form>
